<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/main_green" />
            <gradient android:angle="-90" android:startColor="@color/main_green" android:endColor="@color/main_green"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/main_green" />
            <solid android:color="@color/main_green"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="0dip" android:color="@color/main_green" />
            <gradient android:angle="-90" android:startColor="@color/main_green" android:endColor="@color/main_green" />
        </shape>
    </item>
</selector>