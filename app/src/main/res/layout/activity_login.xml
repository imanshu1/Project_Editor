<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.example.imanshu.project_editor.activity.Login">


    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="@dimen/logo_margin_top"
        android:src="@drawable/logo_editor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logo_hieght" />

    <TextView
        android:id="@+id/main_heading"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/home_heading_textsize"
        android:text="@string/heading"
        android:layout_width="@dimen/login_text_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium" />

    <RelativeLayout
        android:layout_marginBottom="@dimen/margin_slight_medium"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_login"
        android:textColor="@color/white"
        android:text="Log in"
        android:textAllCaps="false"
        android:background="@drawable/dotted_border"
        android:layout_width="@dimen/login_button_width"
        android:layout_height="@dimen/button_hieght" />
    <Button
        android:layout_toEndOf="@id/btn_login"
        android:id="@+id/btn_signup"
        android:layout_marginLeft="@dimen/margin_small"
        android:textColor="@color/black_z"
        android:text="Sign up"
        android:textAllCaps="false"
        android:background="@drawable/button_white"
        android:layout_width="@dimen/login_button_width"
        android:layout_height="@dimen/button_hieght" />
    </RelativeLayout>


</RelativeLayout>
