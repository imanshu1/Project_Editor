    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:padding=".5dp"
        android:id="@+id/img"
        android:src="@drawable/pexels_photo"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>